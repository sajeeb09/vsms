@model IEnumerable<VSMS.Data.user>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<h2>UserList</h2>

<p>
    @Html.ActionLink("Create New", "CreateEmployee")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userPass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sQuestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.aQuestion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userPass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sQuestion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aQuestion)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.userId })
        </td>
    </tr>
}

</table>
