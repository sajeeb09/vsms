@model VSMS.Data.vehicle

@{
    ViewBag.Title = "CreateVehicle";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<h2>CreateVehicle</h2>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<br><br>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        
        <div class="col-md-4">
        <div class="form-group">
            @Html.LabelFor(model => model.model)
        </div>
            <div class="form-group">
                @Html.EditorFor(model => model.model)
                @Html.ValidationMessageFor(model => model.model)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.chasisNo)
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.chasisNo)
                @Html.ValidationMessageFor(model => model.chasisNo)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.vehiclebrand)
            </div>
            <div class="form-group">

                @Html.DropDownListFor(model => model.vehiclebrand, ViewBag.mod as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.vehiclebrand)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.vehiclemanufacturar)
            </div>
            <div class="form-group">

                @Html.DropDownListFor(model => model.vehiclemanufacturar, ViewBag.man as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.vehiclemanufacturar)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.mYear)
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.mYear)
                @Html.ValidationMessageFor(model => model.mYear)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.color)
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.color)
                @Html.ValidationMessageFor(model => model.color)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.engineNo)
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.engineNo)
                @Html.ValidationMessageFor(model => model.engineNo)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.status)
            </div>
            <div class="form-group">
                @{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
{
    Text = "Available",
    Value = "Available"
});

                }
                @Html.DropDownListFor(model => model.status, listItems, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.status)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.bdate)
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.bdate, new { @class = "form-contorl" })
                @Html.ValidationMessageFor(model => model.bdate)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.bprice)
            </div>
        <div class="form-group">
            @Html.EditorFor(model => model.bprice, new { @class = "form-contorl" })
            @Html.ValidationMessageFor(model => model.bprice)
        </div>

        <p>
            <input class="btn btn-success" type="submit" value="Create" />
        </p>
            </div>
    </fieldset>
}
<br><br>

